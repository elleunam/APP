<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_asignar_cliente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212529"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selecciona_usuario"
            android:textSize="14sp"
            android:textColor="#495057"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerUsuarios"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_cliente"
            android:textSize="14sp"
            android:textColor="#495057"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:drawable/editbox_background"
            android:hint="@string/hint_nombre_cliente"
            android:inputType="textPersonName"
            android:textColor="#212529"
            android:textColorHint="#ADB5BD"
            android:autofillHints="name"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnAsignar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/asignar_cliente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0D6EFD"
            android:textAllCaps="false"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>

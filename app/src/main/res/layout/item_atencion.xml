<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:layout_margin="4dp"
    android:padding="12dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… 24/05/2025"
            android:textColor="#0D6EFD"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Presencial"
            android:textColor="#212529"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado: Interesado"
            android:textColor="#212529"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvObservacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obs: Cliente mostr\u00f3 inter\u00e9s, requiere seguimiento."
            android:textColor="#495057"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

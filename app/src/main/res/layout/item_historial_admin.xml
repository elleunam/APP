<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- ✅ Nombre del Cliente -->
    <TextView
        android:id="@+id/txtNombreCliente"
        android:text="Cliente: AGRO RUÍZ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ✅ Ejecutivo asignado -->
    <TextView
        android:id="@+id/txtAsignado"
        android:text="Asignado a: jtorres"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ✅ Supervisor del ejecutivo -->
    <TextView
        android:id="@+id/txtSupervisor"
        android:text="Supervisor: geovana"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ✅ Estado del cliente -->
    <TextView
        android:id="@+id/txtEstado"
        android:text="Estado: Cerrado"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ✅ Fecha y hora de asignación -->
    <TextView
        android:id="@+id/txtFechaHora"
        android:text="Asignado el: 11/06/2025 10:45"
        android:textSize="12sp"
        android:textColor="#777777"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
